@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}


<div class="container pt-2">
    <div class="row justify-content-center">
        @* @Html.ValidationSummary(true, "Ocorreu um erro no preenchimento do formulário. Verifique...") *@
        <form class="col-sm-8 col-md-6 col-lg-4" id="account" method="post">
            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Entrar</span>
            </h5>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder=" " autofocus>
                <label asp-for="Input.Email">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder=" ">
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            @* <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" value="" id="chkLembrar">
                <label for="chkLembrar" class="form-check-label">Lembrar de mim</label>
                </div> *@
            <button type="submit" class="btn btn-block btn-primary font-weight-bold py-3"><i class="bi bi-door-open-fill"></i> Entrar</button>
            <p class="mt-3">
                Ainda não é cadastrado? <a asp-area="Identity" asp-page="Register">Clique Aqui</a> para se cadastrar.
            </p>
            @* <p class="mt-3">
                Esqueceu sua senha? <a href="/recuperarsenha.html">Clique Aqui</a> para recuperá-la.
                </p> *@
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
