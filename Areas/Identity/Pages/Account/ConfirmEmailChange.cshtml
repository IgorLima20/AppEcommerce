@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "Confirm email change";
}

<div class="container pt-2">
    <div class="row justify-content-center">
        <form class="col-sm-8 col-md-6 col-lg-4" method="post">
            <div class="text-center mb-4">
                <h1 class="display-4 my-3"><a asp-controller="Home" asp-action="Index">BUY SELL</a></h1>
                <p class="h5 text-center ">Confrimação de E-mail.</p>
            </div>
            <p class="text-center">@Model.StatusMessage</p>
            <p class="mt-3 mb-2 text-muted text-center">&copy; @DateTime.Now.Year</p>
        </form>
    </div>
</div>
