@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container pt-2">
    <div class="row justify-content-center">
        <div class="loading">Loading&#8230;</div>
        <form method="post" class="col-sm-8 col-md-6 col-lg-4">
            <div asp-validation-summary="All" class="text-danger" hidden></div>
            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Cadastrar-se</span>
            </h5>
            <div asp-validation-summary="All" hidden></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Nome" class="form-control" placeholder=" " autofocus />
                <label asp-for="Input.Nome">Nome Completo</label>
                <span asp-validation-for="Input.Nome" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.UserName" class="form-control" placeholder=" "/>
                <label asp-for="Input.UserName">Nick</label>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder=" " />
                <label asp-for="Input.Email">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder=" " />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder=" " />
                <label asp-for="Input.ConfirmPassword">Confirma Senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold py-3" type="submit" class="btn btn-primary"><i class="bi bi-ui-checks"></i> Cadastar</button>
            <p class="mt-3">
                JÃ¡ possui uma conta? <a asp-area="Identity" asp-page="Login">Clique Aqui</a> Para Logar.
            </p>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
<script type="text/javascript">
    let mensagemErro = '';
    $(".validation-summary-errors ul li").each(function () {
        mensagemErro += $(this).text() + '<br/>';
        $("#Input_Email").focus();
    });
    if (mensagemErro != '')

        swal.fire(
            'Acesso Negado',
            mensagemErro,
            'error'
        );

    function displayBusyIndicator() {
        $('.loading').show();
    };

    $(document).on('submit', 'form', function () {
        displayBusyIndicator();
    });
</script>
}