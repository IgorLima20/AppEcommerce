@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container pt-2">
    <div class="row justify-content-center">
        <form method="post" class="col-sm-8 col-md-6 col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Cadastrar-se</span>
            </h5>
            <div asp-validation-summary="All" hidden></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder=" " autofocus />
                <label asp-for="Input.Email">E-mail</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder=" " />
                <label asp-for="Input.Password">Senha</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder=" " />
                <label asp-for="Input.ConfirmPassword">Confirma Senha</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold py-3" type="submit" class="btn btn-primary"><i class="bi bi-ui-checks"></i> Cadastar</button>
            <p class="mt-3">
                JÃ¡ possui uma conta? <a asp-area="Identity" asp-page="Login">Clique Aqui</a> Para Logar.
            </p>
        </form>
    </div>
