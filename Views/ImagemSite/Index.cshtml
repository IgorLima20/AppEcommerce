@model IEnumerable<AppEcommerce.Models.ImagemSite>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Imagens ilustrativas do site</h4>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-action="Create" class="btn btn-primary">Nova Imagem</a>
                </div>
            </div>
            </p>
            <div class="table-responsive">
                <table class="table table-striped" style="width:100%">
                    <thead>
                        <tr>
                            <th> Imagem </th>
                            <th> Ações </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:80%">
                                    <img src="@item.Img" asp-append-version="true">
                                </td>
                                <td style="width:20%">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="mdi mdi-pencil" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                                        <i class="mdi mdi-format-list-bulleted" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="mdi mdi-delete" style="font-size: 14px;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>