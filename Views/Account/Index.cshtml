@model IEnumerable<AppEcommerce.Models.User>

@{
    ViewData["Title"] = "Usuarios";
    Layout = "_LayoutAdmin";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Listagem de Usuários</h4>
            <div class="d-flex justify-content-between align-items-center">
            </div>
            </p>
            <div class="table-responsive">
                <table class="table table-striped" id="table-produto" style="width:100%">
                    <div asp-validation-summary="All" class="text-danger" hidden></div>
                    <thead>
                        <tr>
                            <th> Usuário </th>
                            <th> E-mail </th>
                            <th> Perfil </th>
                            <th> Ações </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:35%">
                                    @Html.DisplayFor(modelItem => item.NomeCompleto)
                                </td>
                                <td style="width:30%">
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td style="width:15%">
                                    @Html.DisplayFor(modelItem => item.Perfis)
                                </td>
                                <td style="width:20%">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="mdi mdi-pencil" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">
                                        <i class="mdi mdi-format-list-bulleted" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="mdi mdi-delete" style="font-size: 14px;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>