@model AppEcommerce.ViewModels.ShoppingCartViewModel

<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-lg-8 table-responsive mb-5">
            <table class="table table-light table-borderless table-hover text-center mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th>Produto</th>
                        <th>Preço</th>
                        <th>Quantidade</th>
                        <th>Total</th>
                        <th>Remover</th>
                    </tr>
                </thead>
                <tbody class="align-middle" id="janela_transportadoras">
                    @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
                    {
                        <tr item-id="@item.Produto.Id">
                            <td class="align-middle"><img src="@item.Produto.ImagemPrincipal" asp-append-version="true"
                                alt="" style="width: 70px;">
                            </td>
                            <td class="align-middle">@item.Produto.Valor.ToString("C")</td>
                            <td class="align-middle">
                                <div class="input-group quantity mx-auto" style="width: 100px;" name="@item.Produto.Id">
                                    <div class="input-group-btn">
                                        <a href="" class="btn btn-sm btn-primary btn-minus btnDiminuir" prod-id="@item.Produto.Id">
                                            <i class="fa fa-minus"></i>
                                        </a>
                                    </div>
                                    <input id="input-id-@item.Produto.Id" class="form-control form-control-sm bg-secondary border-0 text-center"
                                    type="text" step="1" max="@item.Produto.Estoque" min="1" value="@item.Amount"
                                    name="@item.Produto.Id" disabled>
                                    <div class="input-group-btn">
                                        <a  href="" class="btn btn-sm btn-primary btn-plus btnAumentar" prod-id="@item.Produto.Id">
                                            <i class="fa fa-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                            <td id="totalItem-@item.Produto.Id" class="align-middle">@((item.Amount * item.Produto.Valor).ToString("c"))</td>
                            <td class="align-middle">
                                <a href="" class="btn btn-sm btn-danger excluir" data-id="@item.Produto.Id">
                                    <i class="fa fa-times"></i>
                                </a>
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Carrinho</span></h5>
            <div class="bg-light p-30 mb-5">
                <div class="pt-2">
                    <div class="d-flex justify-content-between mt-2">
                        <h5>Total:</h5>
                        <div id="cart-total">
                            <p>@Model.ShoppingCartTotal.ToString("C")</p>
                        </div>
                    </div>
                    <a class="btn btn-block btn-primary font-weight-bold my-3 py-3">Fazer Checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
<script src="~/js/carrinho.js"></script>
}