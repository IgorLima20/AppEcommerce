@model AppEcommerce.Models.Imagem

@{
    ViewData["Title"] = "Delete";
    Layout = "_LayoutAdmin";
    var produto = ViewBag.Produto as Produto;
}

<div class="row justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            Excluir
        </div>
        <div class="card-body">
            <h5 class="card-title">Deseja Realmente Excluir essa Imagem ?</h5>
            <p class="card-text">Confirme a Exclusão da Imagem !!</p>
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdImagem" />
                <input type="hidden" value="@produto.Id" name="cid">
                <input type="submit" value="Excluir" class="btn btn-primary" />
                <a asp-action="Index" asp-route-cid="@produto.Id" class="btn btn-light">Cancelar</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let ok = '@Html.Raw(ViewBag.Concluido)';
    if (ok == 'OK') {
        Swal.fire({
            icon: "success",
            title: "Imagem Excluída com Sucesso!!",
            type: "success",
            confirmButtonColor: "#3085d6",
            confirmButtonText: "OK",
            closeOnConfirm: true,
            allowOutsideClick: false,
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '@Url.Action("Index", "Produto")';
            }
        })
    }
</script>
}
