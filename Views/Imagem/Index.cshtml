<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Listagem de Imagens</h4>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-action="Create" asp-route-cid="@produto.Id" class="btn btn-primary">Nova Imagem</a>
                </div>
            </div>
            </p>
            <table class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th> Caminho </th>
                        <th> Imagem </th>
                        <th> Ações </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="py-1" style="width:60%">
                                @Html.DisplayFor(modelItem => item.Img)
                            </td>
                            <td style="width:20%">
                                <img src="@("~/img/"+item.Img)" asp-append-version="true">
                            </td>
                            <td style="width:20%">
                                <a asp-action="Edit" asp-route-id="@item.IdImagem" asp-route-cid="@produto.Id" class="btn btn-sm btn-primary">
                                    <i class="mdi mdi-pencil" style="font-size: 14px;"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.IdImagem" asp-route-cid="@produto.Id" class="btn btn-sm btn-secondary">
                                    <i class="mdi mdi-format-list-bulleted" style="font-size: 14px;"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.IdImagem" asp-route-cid="@produto.Id" class="btn btn-sm btn-danger">
