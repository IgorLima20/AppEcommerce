<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Detalhes</h4>
                <p class="card-description"> Detalhes sobre o Produto </p>
                <form class="forms-sample" asp-action="Create" id="form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="control-label">Nome do Produto</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome..." readonly/>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Preço</label>
                        <input asp-for="Valor" type="text" class="form-control" placeholder="Preço..." readonly/>
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estoque" class="control-label"></label>
                        <input asp-for="Estoque" class="form-control" placeholder="Estoque..." readonly/>
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Marca</label>
                        <select asp-for="IdMarca" class="form-control" asp-items="ViewBag.IdMarca" disabled></select>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descrição do Produto</label>
                        <input asp-for="Descricao" class="form-control" placeholder="Descrição..." readonly/>
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categoria</label>
                        <select asp-for="IdCategoria" class="form-control" asp-items="ViewBag.IdCategoria" disabled></select>
                    </div>
                    <div class="form-group">

                    </div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Editar</a>
                    <a asp-action="Index" class="btn btn-light">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>