@model AppEcommerce.Models.Produto

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutAdmin";
}

<div class="row justify-content-center">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Detalhes</h4>
                <p class="card-description"> Detalhes sobre o Produto </p>
                <form class="forms-sample" asp-action="Create" id="form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="control-label">Nome do Produto</label>
                        <input type="text" asp-for="Nome" class="form-control" placeholder="Nome..." disabled/>
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Nome secundário</label>
                        <input type="text" asp-for="NomeDescricao" class="form-control" placeholder="Nome..." disabled/>
                        <span asp-validation-for="NomeDescricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Preço</label>
                        <input asp-for="Valor" type="text" class="form-control" placeholder="Preço..." disabled/>
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Estoque" class="control-label"></label>
                        <input asp-for="Estoque" class="form-control" placeholder="Estoque..." disabled/>
                        <span asp-validation-for="Estoque" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Marca</label>
                        <input asp-for="Marca.Nome" class="form-control" disabled>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Descrição do Produto</label>
                        <textarea class="form-control" asp-for="Descricao" rows="10" placeholder="Descrição..." disabled></textarea >
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Categoria</label>
                        <input asp-for="Categoria.Nome" class="form-control" disabled>
                    </div>
                    <div class="form-check form-check-flat form-check-primary">
                        <label class="form-check-label">
                            <input type="checkbox" asp-for="ExibirHome" class="form-check-input" disabled> Produto em Destaque
                        </label>
                    </div>
                    <div class="form-group">
                        <div class="col-12 mt-2 text-center">
                            <img src="@Model.ImagemPrincipal" class="img-fluid" id="PreviewImage" />
                        </div>
                    </div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary mr-2">Editar</a>
                    <a asp-action="Index" class="btn btn-light">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>