@model IEnumerable<AppEcommerce.Models.Produto>

@{
    ViewData["Title"] = "Produto";
    Layout = "_LayoutAdmin";
    ViewBag.Subtitulo = "Produtos";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Listagem de Produtos</h4>
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <a asp-action="Create" class="btn btn-primary">Novo Produto</a>
                </div>
            </div>
            </p>
            <div class="table-responsive">
                <table class="table table-striped" id="table-produto" style="width:100%">
                    <div asp-validation-summary="All" class="text-danger" hidden></div>
                    <thead>
                        <tr>
                            <th> Produto </th>
                            <th> Preço </th>
                            <th> Estoque </th>
                            <th> Ações </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td style="width:40%">
                                    @item.Nome
                                </td>
                                <td style="width:20%">
                                    @item.Valor.ToString("C")
                                </td>
                                <td style="width:20%">
                                    @item.Estoque
                                </td>
                                <td style="width:20%">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                                        <i class="mdi mdi-pencil" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Index" asp-controller="Imagem" asp-route-cid="@item.Id"
                                    class="btn btn-sm btn-success" title="Imagens">
                                        <i class="mdi mdi-folder-multiple-image" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Detalhes">
                                        <i class="mdi mdi-format-list-bulleted" style="font-size: 14px;"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                        <i class="mdi mdi-delete" style="font-size: 14px;"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    let mensagemErro = '';
    $(".validation-summary-errors ul li").each(function () {
        mensagemErro += $(this).text() + '<br/>';
        $("#Input_Email").focus();
    });
    if (mensagemErro != '')

        swal.fire(
            'Acesso Negado',
            mensagemErro,
            'error'
        );
</script>