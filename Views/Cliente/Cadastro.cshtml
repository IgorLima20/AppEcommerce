@{
    ViewBag.Subtitulo = "Buy Sell Tecnologia";
}

<div class="container pt-2">
    <div class="row justify-content-center">
        <form class="col-sm-8 col-md-6 col-lg-4">
            <h5 class="section-title position-relative text-uppercase mb-3"><span
                    class="bg-secondary pr-3">Cadastrar-se</span>
            </h5>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" id="txtNome" placeholder=" " autofocus />
                <label for="txtNome">Nome</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="text" id="txtCPF" placeholder=" " />
                <label for="txtCPF">CPF</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="date" id="Data" placeholder=" " />
                <label for="Data">Data de Nascimento</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="email" id="txtEmail" placeholder=" " />
                <label for="txtEmail">E-mail</label>
            </div>
            <div class="form-floating mb-3">
                <input class="form-control" type="password" id="txtSenha" placeholder=" " />
                <label for="txtSenha">Senha</label>
            </div>
            <button class="btn btn-block btn-primary font-weight-bold py-3"><i class="bi bi-ui-checks"></i> Cadastar</button>
            <p class="mt-3">
                JÃ¡ possui uma conta? <a href="/login.html">Clique Aqui</a> para logar.
            </p>
        </form>
    </div>
</div>
